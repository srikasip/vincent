= form_for @village do |f|
  - if @village.errors.any?
    #error_explanation
      %h2= "#{pluralize(@village.errors.count, "error")} prohibited this village from being saved:"
      %ul
        - @village.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :state
    = f.text_field :state
  .actions
    = f.submit 'Save'
