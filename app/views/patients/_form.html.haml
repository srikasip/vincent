= form_for @patient do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :bracelet_id
    = f.number_field :bracelet_id
  .field
    = f.label :dob
    = f.datetime_select :dob
  .field
    = f.label :village_id
    = f.number_field :village_id
  .field
    = f.label :mobile
    = f.text_field :mobile
  .actions
    = f.submit 'Save'
